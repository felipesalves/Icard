<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ICard" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/ming_900</item>
        <item name="colorPrimaryVariant">@color/dark_cyan_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/virdian_green_500</item>
        <item name="colorSecondaryVariant">@color/dark_turqueise_200</item>
        <item name="colorOnSecondary">@color/brand_black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="floatingActionButtonStyle">@style/Widget.Design.FloatingActionButton.icard</item>

    </style>
</resources>