<?xml version="1.0" encoding="utf-8"?>
    <layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">


    <data>
        <import type="android.text.TextUtils"/>

      <variable
          name="products"
          type="br.iesb.mobile.icard.domain.product.Products" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="175dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:elevation="10dp"
            android:translationZ="4dp"
            app:cardCornerRadius="8dp"
            app:cardUseCompatPadding="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imgProducts"
                    android:layout_width="91dp"
                    android:layout_height="89dp"
                    android:layout_marginEnd="5dp"
                    android:adjustViewBounds="false"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:srcCompat="@tools:sample/backgrounds/scenic" />

                <TextView
                    android:id="@+id/tvNameProducts"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:text="@{products.name}"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toStartOf="@+id/imgProducts"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvPrice"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:text="@{products.price}"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toStartOf="@+id/imgProducts"
                    app:layout_constraintStart_toEndOf="@+id/tvNamePrice"
                    app:layout_constraintTop_toBottomOf="@+id/tvNameProducts" />

                <TextView
                    android:id="@+id/tvNamePrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:text="R$"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvNameProducts" />

                <ImageView
                    android:id="@+id/imgRate1"
                    android:layout_width="28dp"
                    android:layout_height="17dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvPrice"
                    app:srcCompat="@drawable/rate" />

                <ImageView
                    android:id="@+id/imgRate2"
                    android:layout_width="28dp"
                    android:layout_height="17dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/imgRate1"
                    app:layout_constraintTop_toBottomOf="@+id/tvPrice"
                    app:srcCompat="@drawable/rate" />

                <ImageView
                    android:id="@+id/imgRate3"
                    android:layout_width="28dp"
                    android:layout_height="17dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/imgRate2"
                    app:layout_constraintTop_toBottomOf="@+id/tvPrice"
                    app:srcCompat="@drawable/rate" />
            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
    </layout>